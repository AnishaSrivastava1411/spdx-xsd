<?xml version="1.0"?>
<xs:schema xmlns="spdx-security:xsd::1.0" 
  xmlns:xs="http://www.w3.org/2001/XMLSchema" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xmlns:spd="spdx:xsd::1.0" 
  xmlns:security="urn:security::1.0" 
  attributeFormDefault="unqualified" elementFormDefault="qualified" targetNamespace="spdx-security:xsd::1.0" version="1">
  <xs:import schemaLocation="security.xsd" namespace="urn:security::1.0"/>
  <xs:import schemaLocation="spdx-doc.xsd" namespace="spdx:xsd::1.0"/>
  <xs:annotation>
    <xs:documentation>Software Evidence Archive (security) in an SPDX Document.</xs:documentation>
  </xs:annotation>
  
  <xs:element name="SPDXSoftwareEvidenceArchive" type="SPDXSoftwareEvidenceArchiveType" nillable="true">
    <xs:annotation>
      <xs:documentation>SPDX Software Evidence Archive in an SPDX Document</xs:documentation>
      <xs:appinfo>
        <Element name="SPDX Software Evidence Archive"/>
      </xs:appinfo>
    </xs:annotation>
  </xs:element>
  
  <xs:complexType name="SPDXSoftwareEvidenceArchiveType">
    <xs:annotation>
      <xs:documentation>SPDX Software Evidence Archive in an SPDX Document</xs:documentation>
      <xs:appinfo>
        <ComplexType name="SPDX Software Evidence Archive"/>
      </xs:appinfo>
    </xs:annotation>
    <xs:complexContent>
      <xs:extension base="spd:SpdxDocumentType">
        <xs:sequence>
          <xs:element ref="security:SoftwareEvidenceArchive"/>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

</xs:schema>
